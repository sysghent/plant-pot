{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "Launch async plant pot",
            "chip": "rp2040",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "probe-rs",
            "runtimeArgs": [
                "dap-server"
            ],
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true
            },
            "coreConfigs": [
                {
                    "programBinary": "${workspaceFolder}/embassy/target/thumbv6m-none-eabi/debug/async-plant",
                    "rttEnabled": true,
                    "rttChannelFormats": [
                        {
                            "channelNumber": 0,
                            // Format RTT data as String data
                            "dataFormat": "String",
                            // Include host-side timestamps for every line of data transferred from the target RTT output
                            "showTimestamps": true
                        },
                        {
                            "channelNumber": 1,
                            // Treat data as raw binary data, and do not format in any way
                            "dataFormat": "BinaryLE"
                        }
                    ]
                }
            ],
        },
    ]
}